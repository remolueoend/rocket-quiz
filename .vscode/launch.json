  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program":
        "${workspaceFolder}/node_modules/mocha-webpack/bin/mocha-webpack",
      "args": ["--opts", "./test/mocha-webpack.opts"],
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Rocket Adapter",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "build_project",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/src/services/rocket-adapter/index.ts",
      "outFiles": ["${workspaceFolder}/build/rocket-adapter.js"],
      "sourceMaps": true
    }
  ]
}
